#!/usr/bin/env sh

cd "$(dirname "$0")"
. ".common.sh"
cd ../..

clear

if ! chkcmd 'git'; then
        echo ' error: "git" command not found.'
        exit 1
fi

versions='1.0 1.10 ORIG_HEAD HEAD'

if test $# -gt 0; then
        versions="$@"
fi

test_dir="sandbox/codevelox"
repo_dir="$test_dir/checkout"
test_php="$test_dir/speedtest.php"

git_args="--git-dir .git --work-tree $repo_dir"

mkdir -p "$repo_dir"
mkdir -p "$test_dir"

cp -f 'support/Codevelox.php' "$test_dir/"
cp -f 'support/speedtest.php' "$test_dir/"

for v in $versions; do
        git $git_args checkout -f $v

        mkdir -p "$test_dir/$v"

        cp -rf "$repo_dir/source/"* "$test_dir/$v/"
done

git $git_args checkout master

cd "$test_dir"

echo "\n Versions to test: $versions\n"

for v in $versions; do
        echo " => Testing version $v";

        php speedtest.php "$v"
done
